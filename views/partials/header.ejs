	<script src="js/sotw.js"></script>

	<header>
	<a href="/">
		<img class="logo" src="img/icons/you_watt.png" alt="logo" />
	</a>
	<div style="max-width: 20em; width: auto; float:left; margin: 1.5em 1em; overflow: hidden; white-space: nowrap">
		<span id="scroll" onload="go()" onmouseover="enabled = false" onmouseout = "enabled = true; go()">
			Linux command of the Week: gpg
		</span>
	</div>

	<div class="dropdown">
		<img src="img/icons/settings.png" alt="settings_logo" onclick="myFunction()" class="dropbtn" />
		<div id="myDropdown" class="dropdown-content myDropdown">
			<a id="background_change_btn">Toggle Background</a>
			<a id="notifications_off_btn">Notifications Off</a>
			<a id="advanced_settings_btn" href="/settings">Settings</a>
			<a id="help_btn">Help</a>
			<a id="about_btn" href="/about">About</a>
			<a id="logout_btn" href="/logout">Logout</a>
		</div>
	</div>

	<button class="advanced_search_button" title="Advanced Search" id="advanced_search_form"></button>
	<form class="email_search" onsubmit="not_yet_implemented()">
		<input type="search" name="email_search_input" placeholder="Search Email..." />
	</form>

	<!-- The Advanced Search Modal -->
	<div id="ad_search_modal" class="modal advanced_search_modal">
		<!-- Modal content -->
		<div class="modal-content">
			<span class="close" id="ad_search_modal_close">&#215;</span>
			<form>
				<table class="modal_table">
					<tr>
						<th colspan="2">Advanced Search Options</th>
					</tr>
					<tr>
						<td>Search Folder:</td>
						<td><select class="folder_select">
							<option value="inbox">Inbox</option>
							<option value="sent">sent</option>
							<option value="drafts">drafts</option>
						</select></td>
					</tr>
					<tr>
						<td>To:</td>
						<td><input type="search" name="to" /></td>
					</tr>
					<tr>
						<td>From:</td>
						<td><input type="search" name="from" /></td>
					</tr>
					<tr>
						<td>Subject:</td>
						<td><input type="search" name="subject" /></td>
					</tr>
					<tr>
						<td>Contains Attachment?</td>
						<td><select class="folder_select">
							<option value="dont_care">Don't Know</option>
							<option value="has">Yes</option>
							<option value="No">No</option>
						</select></td>
					</tr>
					<tr>
						<td colspan="2"><button class="styled" onclick="not_yet_implemented()">Search</button></td>
					</tr>
				</table>
			</form>
		</div>
		<!-- modal-content -->
	</div>
	<!-- modal-->
	<div style="clear: both"></div>

</header>

<div id="message_location">
	<% if(typeof messages != 'undefined') { %>
		<% if(messages.info) { %>
			<% for(var i=0; i<messages.info.length; i++) { %>
				<div class="message_box info_text"><i class="info_icon"></i><span class = "info_text"><%= messages.info[i] %></span></div>
			<% } %>
		<% } %>
		<script type="text/javascript">
			setTimeout(function() {
				document.getElementById("message_location").innerHTML = "";
			}, 4100);
		</script>
	<% } %>
</div>
